@model web_viewer.Models.Perfil.PersonFriend

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_new.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Friendship", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container mt-5 mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-7">
                <div class="card p-3 py-4">
                    <h4 class="text-center">Create Friendship</h4>
                    <div class="text-right">
                        @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-primary text-white mt-2 rounded-pill" })
                    </div>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(model => model.PersonId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.PersonId, Model.PersonSelect, " ", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PersonId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FriendsId, htmlAttributes: new { @class = "control-label col-md-2 text-start" })
                            <div class="col-md-10 ms-4 ps-5">
                                @Html.DropDownListFor(model => model.FriendsId, Model.FriendsSelect, " ", new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FriendsId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group buttons mt-5">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-sm btn-outline-success " />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


