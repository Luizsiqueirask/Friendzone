@model web_viewer.Models.Places.StateCountry


<div class="form-horizontal shadow p-3 mb-5 bg-body rounded">
    @using (Html.BeginForm("Edit", "States", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h4>New States</h4>
        <div class="text-right">
            @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-primary text-white mt-2 rounded-pill" })
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container card-body rounded-top">

            <div class="row">
                <div class="form-group col-sm-4">
                    <div class="text-center pt-1">
                        <img src="https://toppng.com/uploads/preview/earth-11530975669ah9u5ydofg.png" class="avatar rounded-circle img-thumbnail col-sm-6" alt="earth">
                        <h6>Upload a Flag</h6>
                        @Html.LabelFor(m => m.Flag.Path, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Flag.Path, new
                   {
                       type = "file",
                       accept = "image/jpeg, image/jpg, image/png",
                       htmlAttributes = new { @class = "form-control-file mt-2 rounded-pill text-center center-block file-upload" }
                   })
                        @Html.ValidationMessageFor(m => m.Flag.Path)
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="tab-content">
                        <div class="table-bordered active" id="home">

                            <div class="container">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Label, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Label, new { htmlAttributes = new { @class = "form-control mt-4 rounded-pill" } })
                                        @Html.ValidationMessageFor(model => model.Label, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group rounded-pill">
                                    @Html.LabelFor(model => model.CountryId, htmlAttributes: new { @class = "control-label col-md-4 mt-2 rounded-pill" })
                                    <div class="col-md-12">
                                        @Html.DropDownListFor(model => model.CountryId, Model.CountriesSelect, " ", new { htmlAttributes = new { @class = "form -control" } })
                                        @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <br>
                                    <div class="col-md-offset-2 col-md-12">
                                        <input type="submit" class="form-control btn btn-lg btn-success rounded-pill" value="Save" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-info" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
