@model IEnumerable<web_viewer.Models.Places.Country>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_new.cshtml";
}

<table class="table table-dark table-striped col">
    <tr class="col-6">      
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Label)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="col-6">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
        </tr>
    }

</table>
<div class="container">
    <h3 class="text-center">All Countries</h3>
    <p>
        @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-sm btn-success text-white" })
    </p>
    <hr />
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="rounded shadow-sm card m-4 shadow-sm rounded-5">
                <div class="card-header shadow-sm bg-white">
                    <h3 class="h3 text-nowrap p-2">@Html.DisplayFor(model => item.Label)</h3>
                    <div class="card-body">
                        <br />
                        <figure class="card-img align-items-center mb-3 container-sm">
                            <img src="@Url.Content(item.Flag.Path)" alt="Image" style="width: 360px; height: 270px;" class="img-thumbnail figure-img shadow-sm rounded-3 rounded-pill mb-5" />
                        </figure>
                        <div class="rounded">
                            <div class="card-footer bg-gradient bg-opacity-50 text-center rounded-pill">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-md btn-gradient btn-warning text-white rounded-pill" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-md btn-gradient btn-primary text-white rounded-pill" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-md btn-gradient btn-danger text-white rounded-pill" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>